  
 
    <h1>글쓰기</h1>


    <div class="row">
      <form action="/create" method="POST" class="col s12" enctype="multipart/form-data">
          
          <div class="row">
          <div class="input-field col s6">
            
             <%  if user_signed_in? %>
               <input name = "editor" id="input_editor" type="text" value = "<%= current_user.email %>" data-length="10">
              <% else %>
               <input name = "editor" id="input_editor" type="text" data-length="10">
             <% end %>

            <label  for="input_text">글쓴이</label>
          </div>
        </div>
        
        <div class="row">
          <div class="input-field col s6">
            <input name = "title" id="input_title" type="text" data-length="30">
            <label  for="input_text">제목을 입력하세요</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <textarea name = "content" id="textarea" class="materialize-textarea" data-length="120"></textarea>
            <label for="textarea1">내용을 입력하세요</label>
          </div>
        </div>
        
          <div class="row">
          <div class="input-field col s6">
            <label for="file_text">이미지를 넣어주세요</label><br><br>
            <input type="file" name="inputUrl" accept="image/*"><br><br>
            
          </div>
        </div>
        
         
         
         <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    

  
  </div>